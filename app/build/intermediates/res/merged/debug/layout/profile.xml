<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_bg_top"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_10dp"
                android:drawableTop="@drawable/user_pic_large"
                android:text="Anna Mccoy"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a.mccoy@gmail.com"
                android:textColor="@color/side_menu_divider"
                android:textSize="@dimen/txt_12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27/09/1982"
                android:textColor="@color/side_menu_divider"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView4"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a.mccoy@gmail.com" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView6"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Username" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anna123" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView8"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anna" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView10"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Surname" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mccoy" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView12"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Los Angeles" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView14"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sex" />

                <TextView
                    android:id="@+id/textView15"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView16"
                    style="@style/profile_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Birth Date" />

                <TextView
                    android:id="@+id/textView17"
                    style="@style/profile_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27/09/1982"
                    android:drawablePadding="@dimen/pad_10dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_calender" />
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>
