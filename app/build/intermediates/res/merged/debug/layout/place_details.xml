<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scr"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="@drawable/card_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/pad_10dp"
                android:gravity="bottom"
                android:background="@drawable/card_img_shadow" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    android:text="Superba Food" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_12sp"
                    android:text="Restaurant Food" 
                    android:layout_marginTop="@dimen/pad_3dp"
                    android:layout_marginBottom="@dimen/pad_3dp"/>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_12sp"
                    android:text="1900 S Lincoln Blvd, Venice, Los Angeles"
                    android:drawablePadding="@dimen/pad_3dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/card_img_map_icon" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/car_map_thumbnail" />

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/divider"
                android:layout_height="match_parent"
                android:background="@color/main_grey_lt" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                 >
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/side_menu_divider"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    android:text="Phone" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_grey_dk"
                    android:textColorLink="@color/main_grey_dk"
                    android:textSize="@dimen/txt_14sp"
                    android:text="310-907-5075" 
                    android:autoLink="phone"/>
            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/divider"
                android:layout_height="match_parent"
                android:background="@color/main_grey_lt" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                 >
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/side_menu_divider"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    android:text="Expensive" />

                <LinearLayout
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

            <TextView
                android:id="@+id/r1"
                style="@style/lbl_list_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="@color/main_red" />

            <TextView
                android:id="@+id/r2"
                style="@style/lbl_list_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_red"
                android:text="$" />

            <TextView
                android:id="@+id/r3"
                style="@style/lbl_list_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_red"
                android:text="$" />

            <TextView
                android:id="@+id/r4"
                style="@style/lbl_list_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />

            <TextView
                android:id="@+id/r5"
                style="@style/lbl_list_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />
        </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/main_grey_lt" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_temp"
            android:textColor="@color/side_menu_divider"
            android:textSize="@dimen/txt_14sp" 
            android:padding="@dimen/pad_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/pad_10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >
                <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website:"
            android:textColor="@color/side_menu_divider"
            android:textSize="@dimen/txt_14sp" 
            />
                <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.superfood.com"
            android:autoLink="all"
            android:textColorLink="@color/main_red"
            android:textColor="@color/main_red"
            android:textSize="@dimen/txt_14sp" 
            />
                
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_facebook" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_twitter" 
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_gplus" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>